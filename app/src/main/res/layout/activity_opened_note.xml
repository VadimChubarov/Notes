<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_note4"
        tools:context=".Activities.OpenedNoteActivity"
        android:id = "@+id/OpenedNoteLayout"
>

    <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/animated_button_erase"
            android:layout_alignEnd="@+id/NoteText" android:layout_alignTop="@+id/Button-exit_note"
            android:id="@+id/Button_eraiser"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:inputType="textMultiLine"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/NoteText"/>
    <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/animated_button_save"
            android:textSize="20sp"
            android:id="@+id/Button-exit_note"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:layout_alignStart="@+id/NoteText"/>

</RelativeLayout>